{
    "version": 2,
    "builds": [
        {
            "src": "server/dist/index.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "server/dist/**"
                ]
            }
        },
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "www"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server/dist/index.js"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}